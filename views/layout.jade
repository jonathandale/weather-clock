doctype 5
html
  head
    title= title
    meta(name="viewport", content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui")
    - if(env === "development")
      link(rel="stylesheet", href="/css/nimbus.css")
      script(src="/packages/bower/jquery/dist/jquery.min.js")
      script(src="/packages/bower/underscore/underscore.js")
      script(src="/packages/bower/moment/min/moment-with-locales.min.js")
      script(src="/packages/two.dev.min.js")
      script(src="/packages/bower/backbone/backbone.js")
      script(src="/packages/bower/backbone.marionette/lib/backbone.marionette.js")
      script(src="/packages/bower/backbone.advice/advice.js")
      script(src="/packages/bower/tweenjs/src/Tween.js")
      script(src="/packages/finger.js")

      script(src="/js/app.js")
      script(src="/js/mixins.js")
      script(src="/js/util.js")
      script(src="/js/nimbus.js")

      script(src="/js/layout.js")
      script(src="/js/currently.js")
      script(src="/js/precipitation.js")
      script(src="/js/outlook.js")
      script(src="/js/forecasts.js")

    - if(env === "production")
      link(rel="stylesheet", href="#{appName}-#{version}.min.css")
      script(src="#{appName}-#{version}.min.js")
  body

    block templates
    block content

    script.
      $(function() {
        App.start();
      });
